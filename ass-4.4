        "def simulate_llm_response(review_text, prompt_type):\n",
        "    # Define the actual sentiments for reference\n",
        "    actual_sentiments = {\n",
        "        \"The product is excellent, highly recommend!\": \"Positive\",\n",
        "        \"This was a complete waste of money, very disappointed.\": \"Negative\",\n",
        "        \"It's okay, nothing special, but it works.\": \"Neutral\",\n",
        "        \"Absolutely love this! Best purchase ever.\": \"Positive\",\n",
        "        \"The delivery was slow and the item was damaged.\": \"Negative\",\n",
        "        \"Service was good, but the food was a bit bland.\": \"Neutral\"\n",
        "    }\n",
        "\n",
        "    # Specific misclassification rules\n",
        "    if review_text == \"It's okay, nothing special, but it works.\":\n",
        "        if prompt_type == 'zero_shot':\n",
        "            return 'Positive' # Misclassification\n",
        "        else:\n",
        "            return 'Neutral' # Correct\n",
        "    elif review_text == \"The delivery was slow and the item was damaged.\":\n",
        "        if prompt_type == 'zero_shot':\n",
        "            return 'Neutral' # Misclassification\n",
        "        else:\n",
        "            return 'Negative' # Correct\n",
        "    elif review_text == \"Service was good, but the food was a bit bland.\":\n",
        "        if prompt_type == 'zero_shot':\n",
        "            return 'Positive' # Misclassification\n",
        "        elif prompt_type == 'one_shot':\n",
        "            return 'Negative' # Misclassification\n",
        "        else:\n",
        "            return 'Neutral' # Correct\n",
